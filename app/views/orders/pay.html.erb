<h1 class="p-5">刷卡</h1>

<p>訂單編號 <%= @order.serial %></p>

<%= form_with url: pay_order_path(id: @order.serial),
              method: 'post',
              data: {
                controller: 'braintree',
                token: @token,
                } do |form| %>

<span data-braintree-target='payment'></span>
<%= form.submit %>
<% end %>
