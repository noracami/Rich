<%= render "shared/errors", errors: article.errors if article.errors.any? %>

<%= form_for article do |form| %>

  <div>
  標題
  <%= form.text_field :title %>
  </div>

  <div>
  圖片
  <%= form.file_field :cover_image %>
  </div>

  <div>
    標籤
    <%= form.fields_for :tags do |tags_form| %>
      <%= tags_form.text_field :tags %>
    <% end %>
  </div>

  <div>
  發布日期
  <%= form.text_field :publish_at, data: { controller: "datepicker" }%>
  </div>

  <div>
  內容
  <%= form.text_area :content %>
  </div>

  <div>
  密碼
  <%= form.text_field :pincode %>
  fill unless no need
  </div>

  <%= form.submit %>
<% end %>
