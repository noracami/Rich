<h1>文章</h1>

<h2><%= @article.title %></h2>

<p>
  <% if is_locked?(@article) %>
    <%= form_with url: unlock_article_path, method: "patch" do |f| %>
      <label>請輸入密碼 <%= f.text_field :pincode %></label>
      <%= f.submit "解鎖" %>
    <% end %>
  <% else %>
    <%= @article.content %>
  <% end %>

  <section>
    <%# <%= form_with model: @comment, url: article_comments_path(@article) do |f| %>
    <%= form_with model: [@article, @comment] do |f| %>
      <%= f.text_area :content %>
      <%= f.submit %>
    <% end %>
  </section>
  <ul>
  <% @comments.each do |c| %>
    <li><%= c.content %><%= link_to "X", c, method: "delete", data: {confirm: "Y/n"} %></li>
  <% end %>
  </ul>
</p>
